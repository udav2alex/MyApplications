<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/gap_standard_16dp"
    android:layout_margin="@dimen/gap_half_8dp"
    app:contentPadding="@dimen/gap_half_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/caption_text_view"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/caption_text_size_24sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Caption / name" />

        <TextView
            android:id="@+id/package_text_view"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_quarter_4dp"
            app:layout_constraintTop_toBottomOf="@id/caption_text_view"
            tools:text="ru.gressor.myapplications" />

        <TextView
            android:id="@+id/tags_text_view"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_quarter_4dp"
            android:textAlignment="viewEnd"
            app:layout_constraintTop_toBottomOf="@id/package_text_view"
            tools:text="#tag1 #tag2 #strangeTag" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>